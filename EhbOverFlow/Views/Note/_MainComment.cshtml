@model CommentViewModel

@{

}
<div class="container">


<form method="post" asp-controller="Note" asp-action="Comment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="UserName" type="hidden" value="@User.Identity.Name" />
            <input asp-for="NoteId" type="hidden" />
            <input asp-for="MainCommentId" type="hidden"/>
        <input asp-for="Message" type="text" required />
        <span asp-validation-for="Message" class="text-danger"></span>
        <input type="submit" value="Comment" class="btn btn-primary" />
</form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}